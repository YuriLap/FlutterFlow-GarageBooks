import '/backend/backend.dart';
import '/flutter_flow/flutter_flow_theme.dart';
import '/flutter_flow/flutter_flow_util.dart';
import '/custom_code/widgets/index.dart'; // Imports other custom widgets
import '/flutter_flow/custom_functions.dart'; // Imports custom functions
import 'package:flutter/material.dart';
// Begin custom widget code
// DO NOT REMOVE OR MODIFY THE CODE ABOVE!

import 'package:mapbox_maps_flutter/mapbox_maps_flutter.dart';

class MapboxBasicMap extends StatefulWidget {
  const MapboxBasicMap({
    super.key,
    this.width,
    this.height,
    required this.accessToken,
    required this.lat,
    required this.lng,
    this.zoom = 12.0,
    this.showZoomControls = true,
    this.showLocateButton = true,
  });

  final double? width;
  final double? height;

  final String accessToken;
  final double lat;
  final double lng;
  final double zoom;
  final bool showZoomControls;
  final bool showLocateButton;

  @override
  State<MapboxBasicMap> createState() => _MapboxBasicMapState();
}

class _MapboxBasicMapState extends State<MapboxBasicMap> {
  MapboxMap? _map;
  static const double _controlSize = 40.0;

  @override
  void initState() {
    super.initState();
    MapboxOptions.setAccessToken(widget.accessToken);
  }

  void _onMapCreated(MapboxMap mapboxMap) async {
    _map = mapboxMap;
    await _map!.setCamera(CameraOptions(
      center: Point(coordinates: Position(widget.lng, widget.lat)),
      zoom: widget.zoom,
    ));
  }

  Future<void> _zoomBy(double delta) async {
    if (_map == null) {
      return;
    }
    final cameraState = await _map!.getCameraState();
    await _map!.setCamera(CameraOptions(zoom: cameraState.zoom + delta));
  }

  Future<void> _enableLocation() async {
    if (_map == null) {
      return;
    }
    await _map!.location.updateSettings(LocationComponentSettings(
      enabled: true,
      pulsingEnabled: true,
    ));
  }

  Widget _buildControlButton({
    required IconData icon,
    required VoidCallback onPressed,
  }) {
    return SizedBox(
      width: _controlSize,
      height: _controlSize,
      child: Material(
        color: FlutterFlowTheme.of(context).secondaryBackground,
        shape: const CircleBorder(),
        elevation: 2,
        child: InkWell(
          customBorder: const CircleBorder(),
          onTap: onPressed,
          child: Icon(
            icon,
            size: 20,
            color: FlutterFlowTheme.of(context).primaryText,
          ),
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return SizedBox(
      width: widget.width,
      height: widget.height,
      child: ClipRRect(
        borderRadius: BorderRadius.circular(12),
        child: Stack(
          children: [
            MapWidget(
              key: const ValueKey('mapbox_basic_map'),
              onMapCreated: _onMapCreated,
            ),
            if (widget.showZoomControls || widget.showLocateButton)
              Positioned(
                right: 12,
                bottom: 12,
                child: Column(
                  mainAxisSize: MainAxisSize.min,
                  children: [
                    if (widget.showZoomControls) ...[
                      _buildControlButton(
                        icon: Icons.add,
                        onPressed: () => _zoomBy(1.0),
                      ),
                      const SizedBox(height: 8),
                      _buildControlButton(
                        icon: Icons.remove,
                        onPressed: () => _zoomBy(-1.0),
                      ),
                    ],
                    if (widget.showZoomControls && widget.showLocateButton)
                      const SizedBox(height: 8),
                    if (widget.showLocateButton)
                      _buildControlButton(
                        icon: Icons.my_location,
                        onPressed: _enableLocation,
                      ),
                  ],
                ),
              ),
          ],
        ),
      ),
    );
  }
}

